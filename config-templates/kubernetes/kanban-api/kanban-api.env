# Database Configuration
DB_HOST=mongodb://mongodb-service:27017
DB_NAME=kanban_db
DB_USER=kanban_user
DB_PASSWORD=your_secure_password_here

# Application Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Harbor Registry
HARBOR_REGISTRY=harbor.ngtantai.pro

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Redis Configuration (if using)
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# External Services
EXTERNAL_API_URL=https://api.example.com
CORS_ORIGIN=https://your-frontend-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/kanban-api.log